<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >

    <ImageView android:layout_width="fill_parent" android:layout_height="fill_parent"
            android:src="@drawable/bg_login"
            android:scaleType="centerCrop"/>


    <ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"

            >
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"

                      android:paddingBottom="50dp"
                      android:paddingTop="50dp"
                      android:paddingLeft="30dp"
                      android:paddingRight="30dp"
                      android:orientation="vertical"
                  android:layout_gravity="center"
                >

            <ImageView android:layout_width="100dp" android:layout_height="100dp"
                    android:src="@drawable/logo_coffee"
                    android:layout_gravity="center_horizontal"/>

            //Login

            <LinearLayout android:layout_width="300dp" android:layout_height="wrap_content"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:paddingTop="10dp"
                          android:paddingBottom="10dp"
                          android:orientation="vertical"
                          android:layout_gravity="center_horizontal"
                          android:layout_marginTop="20dp"
                          android:background="#CCFFFFFF"
                    >

                //Field Username
                <LinearLayout android:layout_width="600dp" android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:paddingTop="10dp"
                              android:paddingBottom="10dp">
                    <TextView android:layout_width="70dp" android:layout_height="wrap_content"
                              android:text="Email"
                              android:textSize="14sp"
                              android:textColor="#000"
                              android:gravity="right"/>
                    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                              android:layout_marginLeft="20dp"
                              android:textSize="14sp"
                              android:hint="required"
                              android:inputType="textEmailAddress"
                              android:background="#00000000"
                            android:id="@+id/email"/>


                </LinearLayout>

                //Field password
                <LinearLayout android:layout_width="600dp" android:layout_height="wrap_content"
                              android:orientation="horizontal"
                              android:paddingTop="10dp"
                              android:paddingBottom="10dp">
                    <TextView android:layout_width="75dp" android:layout_height="wrap_content"
                              android:text="Password"
                              android:textSize="14sp"
                              android:textColor="#000"
                              android:gravity="right"/>
                    <EditText android:layout_width="fill_parent" android:layout_height="wrap_content"
                              android:layout_marginLeft="20dp"
                              android:textSize="14sp"
                              android:hint="required"
                              android:inputType="textPassword"
                              android:background="#00000000"
                            android:id="@+id/password"/>


                </LinearLayout>



            </LinearLayout>

            <Button android:layout_width="200dp" android:layout_height="wrap_content"
                    android:id="@+id/login"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Login"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:background="#CCFFFFFF"/>

            <Button android:layout_width="200dp" android:layout_height="wrap_content"
                    android:text="Register new account"
                    android:id="@+id/createac"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#000"
                    android:layout_gravity="center_horizontal"
                    android:background="#CCFFFFFF"
                    />

            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Fotget password ?"
                      android:textSize="16sp"
                      android:textColor="#000"
                      android:layout_gravity="center_horizontal"
                      android:layout_marginTop="15dp"/>


        </LinearLayout>
    </ScrollView>

</RelativeLayout>

